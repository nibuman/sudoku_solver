#:kivy 2.1.0

            
<AppLabel>:
    id:'title'
    text:'Sudoku Solver'
    size_hint: 1, 0.1

<ControlButton@Button>:
    background_normal:''
    color: 0, 0, 0, 1
    bold: True
    canvas:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<AppControls>:
    size_hint: 1, 0.2
    orientation:'horizontal'
    padding:10
    ControlButton:
        text:"Solve"
        on_release: root.solve()
    ControlButton:
        text:"Reset"
        on_release: root.reset_board()
    ControlButton:
        text:"Quit"
        on_release: root.quit()

<OuterGrid>:
    cols:3
    rows:3
    padding:10

<InnerGrid>:
    cols:3
    rows:3
    padding:3

<SudokuButton>:
    background_normal:''
    size_hint:0.01, 0.01
    bold: True
    on_release:root.print_number()
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height



<MyLayout>:
    orientation:'vertical'
    size: root.width, root.height
    padding:5
    AppLabel:
    AppControls:


<NumberButton@Button>:
    background_normal:''
    color: 0, 0, 0, 1
    bold: True
    canvas:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height


<NumberEntry>:
    title:"Enter a number"
    size_hint:0.7,0.7
    BoxLayout:
        orientation:'vertical'
        Button:
            background_normal:''
            color: 0, 0, 0, 1
            bold: True
            size_hint: 1,0.5
            text:'Clear'
            on_release:root.clear()
        GridLayout:
            cols:3
            rows:3
            NumberButton:
                text:'1'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'2'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'3'   
                on_release: root.select_number(self.text)        
            NumberButton:
                text:'4'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'5'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'6'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'7'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'8'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'9'
                on_release: root.select_number(self.text)
