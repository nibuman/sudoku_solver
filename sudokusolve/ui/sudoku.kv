#:kivy 2.1.0
            
<AppLabel>:
    id:'title'
    text:'Sudoku Solver'
    size_hint: 1, 0.1

<AppControls>:
    size_hint: 1, 0.2
    orientation:'horizontal'
    padding:10
    Button:
        text:"Solve"
        on_release: root.solve()
    Button:
        text:"Reset"
        on_release: root.reset_board()
    Button:
        text:"Quit"
        on_release: root.quit()

<OuterGrid>:
    cols:3
    rows:3
    padding:10

<InnerGrid>:
    cols:3
    rows:3
    padding:3

<SudokuButton>:
    color:0,0,0,1
    size_hint:0.01, 0.01
    on_release:root.print_number()

<MyLayout>:
    orientation:'vertical'
    size: root.width, root.height
    padding:5
    AppLabel:
    AppControls:

<NumberButton@Button>:
    

<NumberEntry>:
    title:"Enter a number"
    size_hint:0.7,0.7
    BoxLayout:
        orientation:'vertical'
        Button:
            size_hint: 1,0.5
            text:'Clear'
            on_release:root.clear()
        GridLayout:
            cols:3
            rows:3
            NumberButton:
                text:'1'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'2'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'3'   
                on_release: root.select_number(self.text)        
            NumberButton:
                text:'4'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'5'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'6'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'7'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'8'
                on_release: root.select_number(self.text)
            NumberButton:
                text:'9'
                on_release: root.select_number(self.text)
